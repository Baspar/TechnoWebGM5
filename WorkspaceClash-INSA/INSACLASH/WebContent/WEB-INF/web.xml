<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <servlet-name>Inscription</servlet-name>
    <servlet-class>Controleur.Inscription</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Connexion</servlet-name>
    <servlet-class>Controleur.Connexion</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Deconnexion</servlet-name>
    <servlet-class>Controleur.Deconnexion</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GestionRessource</servlet-name>
    <servlet-class>Controleur.GestionRessource</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GestionHDV</servlet-name>
    <servlet-class>Controleur.GestionHDV</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GestionDefense</servlet-name>
    <servlet-class>Controleur.GestionDefense</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GestionCaserne</servlet-name>
    <servlet-class>Controleur.GestionCaserne</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>GestionVillage</servlet-name>
    <servlet-class>Controleur.GestionVillage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Inscription</servlet-name>
    <url-pattern>/inscription</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Connexion</servlet-name>
    <url-pattern>/connexion</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Deconnexion</servlet-name>
    <url-pattern>/deconnexion</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GestionRessource</servlet-name>
    <url-pattern>/gestionRessource</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GestionHDV</servlet-name>
    <url-pattern>/gestionHDV</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GestionDefense</servlet-name>
    <url-pattern>/gestionDefense</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GestionCaserne</servlet-name>
    <url-pattern>/gestionCaserne</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>GestionVillage</servlet-name>
    <url-pattern>/gestionVillage</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>Set Character Encoding</filter-name>
    <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>ignore</param-name>
      <param-value>false</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>Set Character Encoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>config.InitialisationDaoFactory</listener-class>
  </listener>
  <filter>
    <filter-name>RestrictionFilter</filter-name>
    <filter-class>filtre.RestrictionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>RestrictionFilter</filter-name>
    <url-pattern>/WEB-INF/joueurConnecte/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>INCLUDE</dispatcher>
  </filter-mapping>
</web-app>